<Page x:Class="DotNetBay.WPF.BidView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      d:DataContext="{d:DesignInstance Type=local:BidView}"
      xmlns:local="clr-namespace:DotNetBay.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="BidView">

    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.ColumnSpan="2" FontWeight="Bold" FontSize="23">Add New Auction</Label>
        <Label Grid.Column="0" Grid.Row="1">Title</Label>
        <Label Grid.Column="1" Grid.Row="1" Content="{Binding Path=Title}"></Label>
        <Label Grid.Column="0" Grid.Row="3">Description</Label>
        <Label Grid.Column="1" Grid.Row="3" Content="{Binding Path=Description}"></Label>

    </Grid>
</Page>
